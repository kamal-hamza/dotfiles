# vim mode in tmux
setw -g mode-keys vi

# Enable mouse support
set -g mouse on

# Set prefix key to Ctrl+s (default is Ctrl+b)
unbind C-b
set -g prefix C-s
bind C-s send-prefix

# Enable 256-color mode and true color support
set -g default-terminal "screen-256color"
set -ga terminal-features ",xterm-256color:RGB"

# Split panes
bind v split-window -h -c "#{pane_current_path}"
bind b split-window -v -c "#{pane_current_path}"

# Disable confirmation for killing a pane/window
unbind x
unbind X
unbind &
bind x kill-pane
bind X kill-session
bind & kill-window

# Session keybinds
unbind n
unbind p
bind n switch-client -n
bind p switch-client -p

# Window keybinds
unbind l
unbind k
unbind r
bind l next-window
bind k previous-window
bind r command-prompt "rename-window '%%'"

# Copy mode
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# Smart pane switching with vim awareness
is_vim="ps -o state= -o comm= -t '#{pane_tty}' | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?\.?(view|l?n?vim?x?|fzf)(diff)?$'"
bind-key -n 'C-h' if-shell "$is_vim" 'send-keys C-h' 'select-pane -L'
bind-key -n 'C-j' if-shell "$is_vim" 'send-keys C-j' 'select-pane -D'
bind-key -n 'C-k' if-shell "$is_vim" 'send-keys C-k' 'select-pane -U'
bind-key -n 'C-l' if-shell "$is_vim" 'send-keys C-l' 'select-pane -R'

# Restore clear screen keybind
bind C-l send-keys 'C-l'

# Start window numbering from 1
set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on

# Increase scrollback buffer
set -g history-limit 10000

# Status bar position
set -g status-position bottom
set -g status-interval 1

# Status bar lengths
set -g status-left-length 100
set -g status-right-length 100

# Colors - Using Soft Focus {{ .theme_mode | default "dark" }} theme
{{ if eq (.theme_mode | default "dark") "light" -}}
# Light theme colors
set -g status-style "bg=#ffffff,fg=#000000"
set -g message-style "bg=#ffffff,fg=#4da6ff"
set -g pane-border-style "fg=#d0d0d0"
set -g pane-active-border-style "fg=#448cbb"
set -g window-status-style "fg=#666666,bg=#ffffff"
set -g window-status-current-style "fg=#ffffff,bg=#4da6ff,bold"
set -g mode-style "bg=#448cbb,fg=#ffffff"
set -g clock-mode-colour "#448cbb"

# Status left: session name
set -g status-left "#[fg=#ffffff,bg=#4da6ff,bold] #S #[default] "

# Status right: current path and time
set -g status-right "#[fg=#4da6ff]#{=/-32/...:#{b:pane_current_path}} #[fg=#d0d0d0]│#[fg=#666666] %H:%M "
{{ else -}}
# Dark theme colors
set -g status-style "bg=#050505,fg=#f5f5f5"
set -g message-style "bg=#050505,fg=#67b7f5"
set -g pane-border-style "fg=#333333"
set -g pane-active-border-style "fg=#448cbb"
set -g window-status-style "fg=#bbbbbb,bg=#050505"
set -g window-status-current-style "fg=#050505,bg=#67b7f5,bold"
set -g mode-style "bg=#448cbb,fg=#050505"
set -g clock-mode-colour "#448cbb"

# Status left: session name
set -g status-left "#[fg=#050505,bg=#67b7f5,bold] #S #[default] "

# Status right: current path and time
set -g status-right "#[fg=#67b7f5]#{=/-32/...:#{b:pane_current_path}} #[fg=#333333]│#[fg=#888888] %H:%M "
{{ end -}}

# Window status format
set -g window-status-format " #I:#W "
set -g window-status-current-format " #I:#W "
set -g window-status-separator ""

# Pane borders
set -g pane-border-lines single
set -g pane-border-status off

# Toggle tmux status bar with prefix + \
bind '\' set status

# Reload tmux config
bind R source-file ~/.tmux.conf \; display-message "Config reloaded!"
