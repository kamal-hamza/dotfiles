# vim mode in tmux
setw -g mode-keys vi

# Enable mouse support
set -g mouse on

# Set prefix key to Ctrl+s (default is Ctrl+b)
unbind C-b
set -g prefix C-s
bind C-s send-prefix

# Enable 256-color mode and true color support
set -g default-terminal "screen-256color"
set -ga terminal-features ",xterm-256color:RGB"

# Split panes
bind v split-window -h -c "#{pane_current_path}"
bind b split-window -v -c "#{pane_current_path}"

# Disable confirmation for killing a pane/window
unbind x
unbind X
unbind &
bind x kill-pane
bind X kill-session
bind & kill-window

# Session keybinds
unbind n
unbind p
bind n switch-client -n
bind p switch-client -p

# Window keybinds
unbind l
unbind k
unbind r
bind l next-window
bind k previous-window
bind r command-prompt "rename-window '%%'"

# Copy mode
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# Smart pane switching with vim awareness
is_vim="ps -o state= -o comm= -t '#{pane_tty}' | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?\.?(view|l?n?vim?x?|fzf)(diff)?$'"
bind-key -n 'C-h' if-shell "$is_vim" 'send-keys C-h' 'select-pane -L'
bind-key -n 'C-j' if-shell "$is_vim" 'send-keys C-j' 'select-pane -D'
bind-key -n 'C-k' if-shell "$is_vim" 'send-keys C-k' 'select-pane -U'
bind-key -n 'C-l' if-shell "$is_vim" 'send-keys C-l' 'select-pane -R'

bind-key -T copy-mode-vi 'C-h' select-pane -L
bind-key -T copy-mode-vi 'C-j' select-pane -D
bind-key -T copy-mode-vi 'C-k' select-pane -U
bind-key -T copy-mode-vi 'C-l' select-pane -R

# Increase history limit
set -g history-limit 30000

# Start windows and panes at 1 and not 0
set -g base-index 1
set -g pane-base-index 1
set-window-option -g pane-base-index 1
set-option -g renumber-windows on

# Zero-out escape time delay for quicker response
set -s escape-time 0

# Enable smart window renaming
set-window-option -g automatic-rename on
set -g automatic-rename-format "#{b:pane_current_path}"

# ===================================================================
# STATUS BAR CONFIGURATION
# ===================================================================

# Status bar configuration
set -g status on
set -g status-position bottom
set -g status-justify "left"
set -g status-left-length 50
set -g status-right-length 100

# Colors
set -g status-style "bg=#1c1c1c,fg=#ffffff"
set -g message-style "bg=#1c1c1c,fg=#ffffff"
set -g pane-border-style "fg=#444444"
set -g pane-active-border-style "fg=#00afff"

# Status left: session name
set -g status-left "#[fg=#000000,bg=#00afff,bold] #S #[default] "

# Status right: current path and time
set -g status-right "#[fg=#00afff]#{=/-32/...:#{b:pane_current_path}} #[fg=#666666]â”‚#[fg=#888888] %H:%M "

# Window status format
set -g window-status-format " #I:#W "
set -g window-status-style "fg=#888888"
set -g window-status-current-format " #I:#W "
set -g window-status-current-style "fg=#000000,bg=#00afff,bold"
set -g window-status-separator ""

# Pane borders
set -g pane-border-lines single
set -g pane-border-status off

# Toggle tmux status bar with prefix + \
bind '\' set status

# Reload tmux config
bind R source-file ~/.config/tmux/tmux.conf \; display-message "Config reloaded!"