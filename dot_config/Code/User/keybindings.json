// VS Code Keybindings - Vim-style with enhancements
// Soft Focus Dotfiles
[
  // ===================================
  // VIM-STYLE NAVIGATION
  // ===================================
  // File navigation (Quick Open / Explorer)
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+e",
    "command": "workbench.view.explorer",
    "when": "!editorTextFocus"
  },
  // Split navigation (mirroring Vim/tmux)
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "!terminalFocus && !editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "!terminalFocus && !editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "!terminalFocus && !editorTextFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "!terminalFocus && !editorTextFocus"
  },
  // ===================================
  // TAB MANAGEMENT
  // ===================================
  // Next/Previous tab (like browser)
  {
    "key": "cmd+shift+]",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "cmd+shift+[",
    "command": "workbench.action.previousEditor"
  },
  // Close tab
  {
    "key": "cmd+w",
    "command": "workbench.action.closeActiveEditor"
  },
  // Reopen closed tab
  {
    "key": "cmd+shift+t",
    "command": "workbench.action.reopenClosedEditor"
  },
  // ===================================
  // PANEL & SIDEBAR TOGGLES
  // ===================================
  // Toggle terminal
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  // Toggle sidebar
  {
    "key": "cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // Toggle panel
  {
    "key": "cmd+j",
    "command": "workbench.action.togglePanel"
  },
  // Focus terminal
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.terminal.focus"
  },
  // ===================================
  // SEARCH & REPLACE
  // ===================================
  // Global search
  {
    "key": "cmd+shift+f",
    "command": "workbench.action.findInFiles"
  },
  // Global replace
  {
    "key": "cmd+shift+h",
    "command": "workbench.action.replaceInFiles"
  },
  // ===================================
  // CODE NAVIGATION
  // ===================================
  // Go to symbol in workspace
  {
    "key": "cmd+t",
    "command": "workbench.action.showAllSymbols"
  },
  // Go to symbol in file
  {
    "key": "cmd+r",
    "command": "workbench.action.gotoSymbol"
  },
  // Go to definition
  {
    "key": "cmd+]",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  // Go back
  {
    "key": "cmd+[",
    "command": "workbench.action.navigateBack"
  },
  // Peek definition
  {
    "key": "cmd+shift+]",
    "command": "editor.action.peekDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  // Show references
  {
    "key": "shift+f12",
    "command": "references-view.findReferences",
    "when": "editorHasReferenceProvider && editorTextFocus"
  },
  // ===================================
  // EDITING
  // ===================================
  // Move line up/down
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // Duplicate line
  {
    "key": "cmd+shift+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // Delete line
  {
    "key": "cmd+shift+k",
    "command": "editor.action.deleteLines",
    "when": "editorTextFocus && !editorReadonly"
  },
  // Comment toggle
  {
    "key": "cmd+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  // Format document
  {
    "key": "cmd+shift+i",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus"
  },
  // Format selection
  {
    "key": "cmd+k cmd+f",
    "command": "editor.action.formatSelection",
    "when": "editorHasDocumentSelectionFormattingProvider && editorTextFocus"
  },
  // ===================================
  // MULTI-CURSOR
  // ===================================
  // Add cursor above/below
  {
    "key": "cmd+alt+up",
    "command": "editor.action.insertCursorAbove",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+down",
    "command": "editor.action.insertCursorBelow",
    "when": "editorTextFocus"
  },
  // Select all occurrences
  {
    "key": "cmd+shift+l",
    "command": "editor.action.selectHighlights",
    "when": "editorFocus"
  },
  // Add selection to next find match
  {
    "key": "cmd+d",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus"
  },
  // ===================================
  // TERMINAL
  // ===================================
  // New terminal
  {
    "key": "cmd+shift+`",
    "command": "workbench.action.terminal.new"
  },
  // Kill terminal
  {
    "key": "cmd+shift+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  // Navigate between terminals
  {
    "key": "cmd+alt+]",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+alt+[",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // ===================================
  // GIT
  // ===================================
  // Git: Stage/Unstage
  {
    "key": "cmd+k cmd+a",
    "command": "git.stageAll"
  },
  {
    "key": "cmd+k cmd+u",
    "command": "git.unstageAll"
  },
  // Git: Commit
  {
    "key": "cmd+k cmd+c",
    "command": "git.commit"
  },
  // Git: Push
  {
    "key": "cmd+k cmd+p",
    "command": "git.push"
  },
  // Git: Pull
  {
    "key": "cmd+k cmd+l",
    "command": "git.pull"
  },
  // Show Git changes
  {
    "key": "cmd+k cmd+d",
    "command": "git.openChange"
  },
  // ===================================
  // WORKSPACE
  // ===================================
  // Command palette
  {
    "key": "cmd+shift+p",
    "command": "workbench.action.showCommands"
  },
  // Settings
  {
    "key": "cmd+,",
    "command": "workbench.action.openSettings"
  },
  // Keyboard shortcuts
  {
    "key": "cmd+k cmd+s",
    "command": "workbench.action.openGlobalKeybindings"
  },
  // Zen mode toggle
  {
    "key": "cmd+k z",
    "command": "workbench.action.toggleZenMode"
  },
  // ===================================
  // DEBUGGING
  // ===================================
  // Start/Continue debugging
  {
    "key": "f5",
    "command": "workbench.action.debug.start",
    "when": "debuggersAvailable && debugState == 'inactive'"
  },
  {
    "key": "f5",
    "command": "workbench.action.debug.continue",
    "when": "debugState == 'stopped'"
  },
  // Step over
  {
    "key": "f10",
    "command": "workbench.action.debug.stepOver",
    "when": "debugState == 'stopped'"
  },
  // Step into
  {
    "key": "f11",
    "command": "workbench.action.debug.stepInto",
    "when": "debugState == 'stopped'"
  },
  // Step out
  {
    "key": "shift+f11",
    "command": "workbench.action.debug.stepOut",
    "when": "debugState == 'stopped'"
  },
  // Stop debugging
  {
    "key": "shift+f5",
    "command": "workbench.action.debug.stop",
    "when": "inDebugMode"
  },
  // Toggle breakpoint
  {
    "key": "f9",
    "command": "editor.debug.action.toggleBreakpoint",
    "when": "editorTextFocus"
  },
  // ===================================
  // CUSTOM EXTENSIONS
  // ===================================
  // GitHub Copilot (if installed)
  {
    "key": "ctrl+enter",
    "command": "github.copilot.generate",
    "when": "editorTextFocus"
  },
  // Trigger suggestion
  {
    "key": "ctrl+space",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  },
  // Trigger parameter hints
  {
    "key": "cmd+shift+space",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  // ===================================
  // DISABLE CONFLICTING DEFAULTS
  // ===================================
  // Disable default Cmd+K Cmd+C (conflicts with git commit)
  {
    "key": "cmd+k cmd+c",
    "command": "-workbench.action.terminal.copyLastCommand"
  }
]