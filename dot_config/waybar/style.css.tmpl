{{/* Define the absolut{{/* Define the absolute path to the pywal theme file on the target machine */}}
{{ $walThemePath := joinPath .chezmoi.homeDir ".cache/wal/colors-waybar.css" }}

{{/* Check if the pywal theme file exists */}}
{{ if (stat $walThemePath) }}
/* --- Pywal Theme Found --- */
@import '{{ $walThemePath }}';

* {
    font-family: "JetBrainsMono Nerd Font", sans-serif;
    font-size: 14px;
    font-weight: bold;
    border-radius: 10px;
}

window#waybar {
    background-color: transparent;
}

#clock,
#workspaces,
#battery,
#network {
    background-color: alpha(@background, 0.4);
    color: @foreground;
    padding: 0px 20px;
    margin: 0px 5px;
}

/* Style for all workspace buttons (the dots) */
#workspaces button {
    color: @color7; /* A dimmer color for inactive workspaces */
    transition: none; /* Disable transitions for a snappy feel */
}

/* Style ONLY for the currently focused workspace dot */
#workspaces button.focused {
    color: @color4; /* A bright accent color from your wallpaper */
}

{{ else }}
/* --- Fallback Theme (Pywal colors not found) --- */

* {
    font-family: "JetBrainsMono Nerd Font", sans-serif;
    font-size: 14px;
    font-weight: bold;
    border-radius: 10px;
}

window#waybar {
    background-color: transparent;
}

#clock,
#workspaces,
#battery,
#network {
    /* Hardcoded fallback colors */
    background-color: rgba(0, 0, 0, 0.4);
    color: #ffffff;
    padding: 0px 20px;
    margin: 0px 5px;
}

/* Style for all workspace buttons (the dots) */
#workspaces button {
    color: #aaaaaa; /* A dimmer grey for inactive workspaces */
    transition: none;
}

/* Style ONLY for the currently focused workspace dot */
#workspaces button.focused {
    color: #ffffff; /* Bright white for the focused workspace */
}

#clock,
#battery,
#network {
}
{{ end }}
