* {
    /* Reset all borders and radiuses */
    border: none;
    border-radius: 0;
    /* Set a global font */
    font-family: 'JetBrainsMono Nerd Font', sans-serif;
    font-size: 14px;
    font-weight: bold;
    min-height: 0;
}

/* The entire bar */
window#waybar {
    background: transparent;
    color: @theme_fg_color; /* Use foreground color from Pywal */
}

/* Each module that is visible on the bar */
#clock,
#workspaces,
#battery,
#pulseaudio,
#network,
#cpu,
#memory,
#temperature,
#custom-media {
    background-color: rgba(0, 0, 0, 0.4); /* Dark, semi-transparent background */
    padding: 4px 15px; /* Vertical and horizontal padding */
    margin: 5px 0px;   /* Margin to create vertical space from bar edge */
    border-radius: 12px; /* The rounded corners for each module */
}

/* Style for the active workspace button */
#workspaces button.focused {
    background-color: @theme_selected_bg_color; /* Use Pywal's selected color */
    color: @theme_selected_fg_color;
    border-radius: 10px;
}

/* Style for hover states, optional but nice */
#workspaces button:hover {
    background-color: rgba(255, 255, 255, 0.2);
}
