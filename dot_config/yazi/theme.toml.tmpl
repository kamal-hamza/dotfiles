# Soft Focus Theme for Yazi
# This file uses chezmoi templating to select the appropriate theme

{{ if eq .chezmoi.os "linux" -}}
# On Linux, you can optionally use pywal colors by uncommenting the line below
# import = ["{{ .chezmoi.homeDir }}/.cache/wal/colors-yazi.toml"]

# Or use Soft Focus Dark theme (default)
import = ["~/.config/yazi/themes/soft-focus-dark.toml"]
{{ else -}}
# On macOS and Windows, use Soft Focus Dark theme
import = ["~/.config/yazi/themes/soft-focus-dark.toml"]
{{ end -}}

# To switch to light theme, change the import above to:
# import = ["~/.config/yazi/themes/soft-focus-light.toml"]

# Additional Yazi theme customizations can be added below
# These will override the imported theme settings

[manager]
# You can add custom overrides here
# Example: cwd = { fg = "#custom_color", bold = true }

[filetype]
# Additional file type rules
rules = [
	# Add any custom file type rules here
	# Example: { name = "*.custom", fg = "#color" }
]
