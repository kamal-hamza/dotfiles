# Mako Notification Daemon Configuration
# Theme colors are loaded from themes/
include=~/.config/mako/themes/soft-focus-dark

# Layout
width=350
height=150
margin=20
padding=16
border-radius=12
anchor=top-right
layer=overlay

# Behavior
default-timeout=5000
ignore-timeout=0
group-by=app-name

# Icons
icons=1
max-icon-size=48
icon-path=/usr/share/icons/Papirus-Dark

# Interaction
on-button-left=dismiss
on-button-middle=none
on-button-right=dismiss-all
on-notify=exec mpv /usr/share/sounds/freedesktop/stereo/message.oga
