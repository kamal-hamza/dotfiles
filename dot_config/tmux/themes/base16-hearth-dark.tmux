# Default statusbar colors
set-option -g status-style "fg=#a89991,bg=#1a1614"

# Default window title colors
set-window-option -g window-status-style "fg=#a89991,bg=#1a1614"

# Active window title colors
set-window-option -g window-status-current-style "fg=#6b8da1,bg=#2a2421"

# Pane border
set-option -g pane-border-style "fg=#2a2421"
set-option -g pane-active-border-style "fg=#6b8da1"

# Message text
set-option -g message-style "fg=#e6ddd8,bg=#1a1614"

# Pane number display
set-option -g display-panes-active-colour "#6b8da1"
set-option -g display-panes-colour "#a89991"

# Clock
set-window-option -g clock-mode-colour "#6b8da1"

# Copy mode highlight
set-window-option -g mode-style "fg=#1a1614,bg=#c29b61"

# Bell
set-window-option -g window-status-bell-style "fg=#1a1614,bg=#d46a55"
