# Template author: Hamza Kamal

# Default statusbar colors
set-option -g status-style "fg=#8ca6a2,bg=#151c1b"

# Default window title colors
set-window-option -g window-status-style "fg=#8ca6a2,bg=#151c1b"

# Active window title colors
set-window-option -g window-status-current-style "fg=#4a86a3,bg=#1f2b29"

# Pane border
set-option -g pane-border-style "fg=#1f2b29"
set-option -g pane-active-border-style "fg=#4a86a3"

# Message text
set-option -g message-style "fg=#dbe6e4,bg=#151c1b"

# Pane number display
set-option -g display-panes-active-colour "#4a86a3"
set-option -g display-panes-colour "#8ca6a2"

# Clock
set-window-option -g clock-mode-colour "#4a86a3"

# Copy mode highlight
set-window-option -g mode-style "fg=#151c1b,bg=#9ec481"

# Bell
set-window-option -g window-status-bell-style "fg=#151c1b,bg=#e68a8a"
