{
    "agent": {
        "always_allow_tool_actions": true,
        "default_profile": "write",
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-sonnet-4.5"
        },
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "claude-sonnet-4.5"
        },
        "dock": "right",
        "default_width": 150
    },
    "edit_predictions": {
        "mode": "subtle"
    },
    "file_types": {
        "JSONC": [
            "**/.zed/**/*.json",
            "**/zed/**/*.json",
            "**/Zed/**/*.json",
            "**/.vscode/**/*.json"
        ],
        "XML": [
            "*.sln",
            "*.*proj"
        ],
        "Shell": [
            "*.sh.tmpl"
        ],
        "Lua": [
            "*.lua.tmpl"
        ],
        "CSS": [
            "*.css.tmpl"
        ],
        "JSON": [
            "*.json.tmpl"
        ]
    },
    "icon_theme": "Colored Zed Icons Theme Dark",
    "show_edit_predictions": true,
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "vim_mode": true,
{{- $scheme := .active_scheme | default "soft-focus-dark" }}
{{- $schemePath := joinPath .chezmoi.sourceDir "theme-generators/base16-schemes" (printf "%s.yaml" $scheme) }}
{{- $schemeData := include $schemePath | fromYaml }}
    "theme": "Base16 {{ $schemeData.scheme }}",
    "ui_font_family": "{{ .font_family }}",
    "buffer_font_family": "{{ .font_family }}",
    "ui_font_size": {{ .font_sizes.zed_ui }},
    "buffer_font_size": {{ .font_sizes.zed_buffer }},
    "agent_ui_font_size": {{ .font_sizes.zed_ui }},
    "buffer_font_features": {
        "calt": {{ .font_features.opentype.calt }}
    },
    "cursor_blink": false,
    "scrollbar": {
        "show": "never"
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false,
        "selections_menu": false
    },
    "outline_panel": {
        "button": false
    },
    "relative_line_numbers": "enabled",
    "tab_size": 4,
    "file_finder": {
        "modal_max_width": "large"
    },
    "tab_bar": {
        "show": false
    },
    "prettier": {
        "use_project_prettier": true
    },
    "languages": {
        "C": {
            "formatter": {
                "external": {
                    "command": "clang-format",
                    "arguments": [
                        "--style=file",
                        "--assume-filename={buffer_path}"
                    ]
                }
            }
        },
        "C++": {
            "formatter": {
                "external": {
                    "command": "clang-format",
                    "arguments": [
                        "--style=file",
                        "--assume-filename={buffer_path}"
                    ]
                }
            }
        },
        "Rust": {
            "formatter": "language_server"
        },
        "JavaScript": {
            "formatter": "prettier"
        },
        "TypeScript": {
            "formatter": "prettier"
        },
        "JSON": {
            "formatter": "prettier"
        },
        "Python": {
            "language_servers": [
                "pyrefly",
                "!pyright",
                "!pylsp"
            ],
            "inlay_hints": {
                "enabled": true,
                "show_type_hints": true,
            }
        },
    },
    "lsp": {
        "pyrefly": {
            "settings": {
                "python": {
                    "pythonPath": ".venv/bin/python"
                },
                "pyrefly": {
                    "python_interpreter": ".venv/bin/python"
                }
            }
        }
    },
    "format_on_save": "off",
    "remove_trailing_whitespace_on_save": false,
    "ensure_final_newline_on_save": false,
    "which_key": {
        "enabled": true,
        "delay_ms": 700
    },
    "diagnostics": {
        "include_warnings": true
    },
    "command_aliases": {
        "W": ":w",
        "Wq": ":wq",
        "W!": ":w!"
    },
    "debugger": {
        "dock": "bottom"
    },
    "git_panel": {
        "dock": "left"
    },
    "project_panel": {
        "dock": "right" 
    },
    "collaboration_panel": {
        "dock": null
    },
    "terminal": {
        "dock": "bottom",
        "font_family": "{{ .font_family }}"
    },
    "notification_panel": {
        "dock": null
    },
