{
    "agent": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        }
    },
    "file_types": {
        "JSONC": [
            "**/.zed/**/*.json",
            "**/zed/**/*.json",
            "**/Zed/**/*.json",
            "**/.vscode/**/*.json"
        ],
        "XML": [
            "*.sln",
            "*.*proj"
        ],
        "Shell": [
            "*.sh.tmpl"
        ],
        "Lua": [
            "*.lua.tmpl"
        ],
        "CSS": [
            "*.css.tmpl"
        ],
        "JSON": [
            "*.json.tmpl"
        ]
    },
    // "icon_theme": "Colored Zed Icons Theme Dark",
    "icon_theme": "Colored Zed Icons Theme Dark",
    "show_edit_predictions": false,
    "features": {
        "edit_prediction_provider": "zed"
    },
    "vim_mode": true,
    "theme": "Soft Focus Light",
    "ui_font_family": "FiraCode Nerd Font Mono",
    "buffer_font_family": "FiraCode Nerd Font Mono",
    "ui_font_size": 18,
    "buffer_font_size": 18,
    "agent_font_size": 20,
    "buffer_font_features": {
        "calt": false
    },
    "cursor_blink": false,
    "scrollbar": {
        "show": "never"
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false,
        "selections_menu": false
    },
    "outline_panel": {
        "button": false
    },
    "relative_line_numbers": true,
    "tab_size": 4,
    "inlay_hints": {
        "enabled": false
    },
    "file_finder": {
        "modal_max_width": "large"
    },
    "tab_bar": {
        "show": false
    },
    "prettier": {
        "use_project_prettier": true
    },
    "languages": {
        "C": {
            "formatter": {
                "external": {
                    "command": "clang-format",
                    "arguments": [
                        "--style=file",
                        "--assume-filename={buffer_path}"
                    ]
                }
            }
        },
        "C++": {
            "formatter": {
                "external": {
                    "command": "clang-format",
                    "arguments": [
                        "--style=file",
                        "--assume-filename={buffer_path}"
                    ]
                }
            }
        },
        "Rust": {
            "formatter": "language_server"
        },
        "JavaScript": {
            "formatter": "prettier"
        },
        "TypeScript": {
            "formatter": "prettier"
        },
        "JSON": {
            "formatter": "prettier"
        }
    },
    "format_on_save": "on",
    "diagnostics": {
        "include_warnings": true
    },
    "command_aliases": {
        "W": ":w",
        "Wq": ":wq",
        "W!": ":w!"
    },
    "debugger": {
        "dock": "bottom"
    },
    "git_panel": {
        "dock": "left"
    },
    "chat_panel": {
        "dock": "right",
        "default_width": 150
    },
    "project_panel": {
        "dock": null
    },
    "collaboration_panel": {
        "dock": null
    },
    "terminal": {
        "dock": null
    },
    "notification_panel": {
        "dock": null
    }
}
