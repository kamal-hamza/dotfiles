{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "file_types": {
    "JSONC": [
      "**/.zed/**/*.json",
      "**/zed/**/*.json",
      "**/Zed/**/*.json",
      "**/.vscode/**/*.json"
    ],
    "XML": [
      "*.sln",
      "*.*proj"
    ]
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": true,
  "theme": "Vercel Dark (Blurred)",
  "ui_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "agent_font_size": 18,
  "buffer_font_features": {
    "calt": false
  },
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "outline_panel": {
    "button": false
  },
  "relative_line_numbers": true,
  "tab_size": 4,
  "inlay_hints": {
    "enabled": false
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "tab_bar": {
    "show": false
  },
  "languages": {
    "C": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            "--style=file",
            "--assume-filename={buffer_path}"
          ]
        }
      }
    },
    "C++": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": [
            "--style=file",
            "--assume-filename={buffer_path}"
          ]
        }
      }
    }
  },
  "format_on_save": "on",
  "diagnostics": {
    "include_warnings": true
  },
  "command_aliases": {
    "W": ":w",
    "Wq": ":wq",
    "W!": ":w!"
  },
  "debugger": {
    "dock": "bottom"
  },
  "git_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "right",
    "default_width": 150
  },
  "project_panel": {
    "dock": null
  },
  "collaboration_panel": {
    "dock": null
  },
  "terminal": {
    "dock": null
  },
  "notification_panel": {
    "dock": null
  }
}
