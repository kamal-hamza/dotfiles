#!/usr/bin/env bash
# User-friendly wrapper for theme generator
# Part of Soft Focus Dotfiles theme management system

GENERATOR="${HOME}/.local/share/chezmoi/.script_sources/theme-system/generate_themes.py"

if [ ! -f "$GENERATOR" ]; then
    echo "❌ Theme generator not found at: $GENERATOR"
    echo "   Run 'chezmoi apply' to set up the theme system"
    exit 1
fi

if ! command -v python3 &> /dev/null; then
    echo "❌ Python 3 is required but not found"
    exit 1
fi

exec python3 "$GENERATOR" "$@"
